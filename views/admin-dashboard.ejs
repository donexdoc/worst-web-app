<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Админ-панель — КодЛаб</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Хедер -->
  <header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <span class="text-2xl font-bold text-purple-600">{ КодЛаб }</span>
        <span class="text-gray-400">|</span>
        <span class="text-gray-600">Админ-панель</span>
      </div>
      <a href="/" class="text-gray-600 hover:text-purple-600 transition">← На сайт</a>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 py-8">
    <!-- Статистика -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Заявок</p>
            <p class="text-3xl font-bold text-gray-800"><%= contacts.length %></p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
        </div>
      </div>
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Отзывов</p>
            <p class="text-3xl font-bold text-gray-800"><%= reviews.length %></p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>

    <!-- Заявки -->
    <div class="bg-white rounded-xl shadow-sm mb-8">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-800">Заявки с сайта</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% if (contacts.length === 0) { %>
          <div class="px-6 py-8 text-center text-gray-500">
            Пока нет заявок
          </div>
        <% } else { %>
          <% contacts.forEach(function(contact) { %>
            <div class="px-6 py-4">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-2 mb-1">
                    <span class="font-medium text-gray-800"><%= contact.email %></span>
                    <span class="text-xs text-gray-400"><%= contact.created_at %></span>
                  </div>
                  <p class="text-gray-600"><%= contact.message %></p>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
    </div>

    <!-- Отзывы -->
    <div class="bg-white rounded-xl shadow-sm">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-semibold text-gray-800">Отзывы</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% if (reviews.length === 0) { %>
          <div class="px-6 py-8 text-center text-gray-500">
            Пока нет отзывов
          </div>
        <% } else { %>
          <% reviews.forEach(function(review) { %>
            <div class="px-6 py-4">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-2 mb-1">
                    <!-- УЯЗВИМОСТЬ XSS: имя выводится без экранирования -->
                    <span class="font-medium text-gray-800"><%- review.name %></span>
                    <span class="text-xs text-gray-400"><%= review.created_at %></span>
                  </div>
                  <!-- УЯЗВИМОСТЬ XSS: текст выводится без экранирования -->
                  <p class="text-gray-600"><%- review.text %></p>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>
    </div>
  </main>
</body>
</html>
